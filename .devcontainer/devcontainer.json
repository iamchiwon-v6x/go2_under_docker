{
  "name": "Unitree MuJoCo Simulator",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "password": "unitree",
      "webPort": "6080",
      "vncPort": "5901"
    }
  },
  "forwardPorts": [6080, 5901],
  "postCreateCommand": "bash /workspace/.devcontainer/post-create.sh",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "runArgs": ["--privileged", "-p", "6080:6080", "-p", "5901:5901"],
  "containerEnv": {
    "DISPLAY": ":1",
    "LIBGL_ALWAYS_SOFTWARE": "1",
    "CYCLONEDDS_HOME": "/usr/local",
    "CYCLONEDDS_URI": "file://${containerWorkspaceFolder}/.devcontainer/cyclonedds.xml",
    "ROS_DOMAIN_ID": "0",
    "ROS_LOCALHOST_ONLY": "0",
    "RMW_IMPLEMENTATION": "rmw_cyclonedds_cpp"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-iot.vscode-ros"
      ]
    }
  }
}
